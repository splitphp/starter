use SplitPHP\System;
use SplitPHP\Helpers;

// Includes main class System:
require_once "core/kernel/class.helpers.php";
require_once "core/kernel/class.system.php";

// Initiate the application, running the main class System:
try {
    new System($argv);
    die;
} catch (Exception $exc) {
    Helpers::Log()->error('sys_error', $exc);
    echo "\033[31mERROR[System]: " . $exc->getMessage() . " In file '" . $exc->getFile() . "', line " . $exc->getLine() . ".\033[0m";
    echo PHP_EOL;
}
